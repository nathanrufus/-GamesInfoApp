<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="GamesInfoApp.App">
    <Application.Resources>
        <!-- Application ResourceDictionary -->
        <ResourceDictionary>
            <!-- Define styles and resources here -->
            <Style x:Key="PageBanner" TargetType="Label">
                <Setter Property="BackgroundColor" Value="BlueViolet" />
                <Setter Property="TextColor" Value="LightGreen" />
                <Setter Property="FontFamily" Value="Comic Sans MS" />
                <Setter Property="FontSize" Value="50" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Opacity" Value="0.75" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
